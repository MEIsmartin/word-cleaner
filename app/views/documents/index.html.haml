%h1 Listing documents

%table
  %tr
    %th Title
    %th Body
    %th Created at
    %th Updated at
    %th
    %th
    %th

  - @documents.each do |document|
    %tr
      %td= document.title
      %td= document.cleaned.truncate(250)
      %td= document.created_at.strftime('%m-%e-%y %H:%M')
      %td= document.updated_at.strftime('%m-%e-%y %H:%M')
      %td= link_to 'Show', document
      %td= link_to 'Edit', edit_document_path(document)
      %td= link_to 'Destroy', document, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Document', new_document_path
